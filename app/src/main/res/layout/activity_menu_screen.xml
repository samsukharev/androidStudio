<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003E73"
    tools:context="com.example.simon.citizenengaged.MenuScreen">

    <TextView
        android:id="@+id/simpleOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="164dp"
        android:layout_marginTop="227dp"
        android:text="OR"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theIssue"
        android:layout_width="258dp"
        android:layout_height="65dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="300dp"
        android:text="FIND THE BILL BY THE AREA OF INTEREST"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="94dp"
        android:layout_marginTop="51dp"
        android:text="FIND YOUR REP"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/zipCodeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="type your zip code"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="99dp"
        android:layout_marginRight="72dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/issuesButton"
        android:layout_width="154dp"
        android:layout_height="52dp"
        android:layout_marginRight="103dp"
        android:layout_marginTop="394dp"
        android:background="@drawable/round_corners"
        android:text="GO"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="issuesScreen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/repButton"
        android:layout_width="154dp"
        android:layout_height="52dp"
        android:layout_marginRight="103dp"
        android:layout_marginTop="162dp"
        android:background="@drawable/round_corners"
        android:text="GO"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="repScreen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
